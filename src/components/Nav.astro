---
import ThemeSwitcher from "./ThemeSwitcher.astro";
---

<header class="sticky top-0 z-50 backdrop-blur-md bg-neutral-50/80 dark:bg-neutral-900/80 border-b border-neutral-200 dark:border-neutral-800">
    <div class="container mx-auto px-4 py-4 flex items-center justify-between">
        <div class="">
            <a href="/" class="flex items-center gap-4 text-xl font-heading font-bold text-primary-600 dark:text-primary-400">
              <img src="/logoEB.png" alt="Logo de Estefanía Bermúdez" width="48" height="48" />
            </a>
        </div>
      
      <nav class="hidden md:flex items-center space-x-6">
        <a href="#experiencia" class="text-sm font-medium hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Experiencia</a>
        <a href="#estudios" class="text-sm font-medium hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Estudios</a>
        <a href="#proyectos" class="text-sm font-medium hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Proyectos</a>
        <a href="#skills" class="text-sm font-medium hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Skills</a>
        <a href="/cv-estefania-bermudez.pdf" target="_blank" class="inline-block px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white rounded-lg text-sm font-medium transition-colors">
          Descargar CV
        </a>
      </nav>
      
      <div class="flex items-center gap-4">
        <ThemeSwitcher />
        
        <!-- Botón menú móvil -->
        <button id="mobile-menu-toggle" class="md:hidden p-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Menú móvil -->
    <div id="mobile-menu" class="md:hidden hidden">
      <div class="px-4 pt-2 pb-4 space-y-3">
        <a href="#experiencia" class="block py-2 px-3 text-base font-medium hover:bg-neutral-100 dark:hover:bg-neutral-800 rounded-lg transition-colors">Experiencia</a>
        <a href="#estudios" class="block py-2 px-3 text-base font-medium hover:bg-neutral-100 dark:hover:bg-neutral-800 rounded-lg transition-colors">Estudios</a>
        <a href="#proyectos" class="block py-2 px-3 text-base font-medium hover:bg-neutral-100 dark:hover:bg-neutral-800 rounded-lg transition-colors">Proyectos</a>
        <a href="#skills" class="block py-2 px-3 text-base font-medium hover:bg-neutral-100 dark:hover:bg-neutral-800 rounded-lg transition-colors">Skills</a>
        <a href="/pdfs/mi-cv.pdf" download class="block py-2 px-3 text-base font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition-colors">
          Descargar CV
        </a>
      </div>
    </div>
  </header>