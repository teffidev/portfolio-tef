<style>
/* Patrón de puntos para el fondo */
.bg-pattern-dots {
  background-image: radial-gradient(circle, currentColor 1px, transparent 1px);
  background-size: 20px 20px;
}

/* Animación para los botones de contacto en hover */
@keyframes pulse-border {
  0%, 100% {
    box-shadow: 0 0 0 0 rgba(var(--color-primary-500), 0.4);
  }
  50% {
    box-shadow: 0 0 0 4px rgba(var(--color-primary-500), 0);
  }
}

/* Animación sutil para los enlaces sociales */
@keyframes floating {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-5px);
  }
}
</style>