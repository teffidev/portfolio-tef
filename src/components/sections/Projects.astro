---
// Define tus proyectos aquí
const proyectos = [
    {
        titulo: "Landing-Planium",
        descripcion: "Sitio web con el objetivo de mostrar al usuario las bondades de la aplicación mobile para la gestión de tareas, además de mostrar como puede optimizar y ordenar su tiempo en las tareas.",
        imagen: "/landing-planium.png",
        tecnologias: ["Astro", "TypeScript", "JavaScript", "Node.js", "TailwindCSS"],
        enlaceDemo: "https://landing-planium.vercel.app/es",
        enlaceRepo: "https://github.com/teffidev/landing-planium",
        categoria: "Web App"
    },
    {
        titulo: "App Planium Operarios",
        descripcion: "App que automatiza tareas rutinarias y optimiza flujos de trabajo, combinando inteligencia artificial con herramientas intuitivas para transformar la forma en que los equipos colaboran y alcanzan sus objetivos.",
        imagen: "/operarios-planium.png",
        tecnologias: ["Astro", "TypeScript", "JavaScript", "Node.js", "TailwindCSS"],
        enlaceDemo: "https://op.planium.ai/",
        enlaceRepo: "https://github.com/teffidev/landing-planium",
        categoria: "Mobile App"
    },
    {
        titulo: "ImportaApp",
        descripcion: "Plataforma integral para la gestión de clientes y cotización de importaciones, diseñada para asistir a empresas y personas naturales en cada etapa del proceso de importación de mercancías a su país.",
        imagen: "/Importaapp.png",
        tecnologias: ["React", "Next.js", "TypeScript", "Node.js", "TailwindCSS", "GraphQL"],
        enlaceDemo: "http://app.importaapp.com/",
        enlaceRepo: "https://github.com/teffidev/Importaapp-customers",
        categoria: "Web Platform"
    },
    {
        titulo: "Landing Aruba Music",
        descripcion: "Página Web orientada a la captación de clientes para una agencia de espectáculos de música en vivo en la isla. El diseño se enfocó en destacar su propuesta de valor.",
        imagen: "/music-aruba.png",
        tecnologias: ["React", "Next.js", "TypeScript", "Node.js", "TailwindCSS", "GraphQL"],
        enlaceDemo: "https://live-music-aruba.vercel.app/",
        enlaceRepo: "https://github.com/teffidev/Landing-ArubaMusic",
        categoria: "Landing Page"
    },
];

// Íconos para las tecnologías (usando la librería simple-icons para mantener consistencia)
const techIcons: Record<string, string> = {
  "Astro": "astro",
  "React": "react",
  "Next.js": "nextdotjs",
  "TypeScript": "typescript",
  "JavaScript": "javascript",
  "TailwindCSS": "tailwindcss",
  "Node.js": "nodedotjs",
  "GraphQL": "graphql",
};
---

<section id="proyectos" class="py-20 bg-light-background dark:bg-dark-background relative overflow-hidden">
  <!-- Elementos decorativos de fondo -->
  <div class="absolute inset-0 -z-10 opacity-40">
    <div class="absolute top-0 left-0 w-1/3 h-1/3 bg-gradient-to-br from-primary-100/40 to-transparent dark:from-primary-900/20 blur-3xl"></div>
    <div class="absolute bottom-0 right-0 w-1/3 h-1/3 bg-gradient-to-tl from-secondary-100/40 to-transparent dark:from-secondary-900/20 blur-3xl"></div>
    <div class="absolute inset-0 bg-grid-pattern"></div>
  </div>

  <div class="container mx-auto px-4">
    <div 
      class="text-center max-w-3xl mx-auto mb-16"
      data-aos="fade-up"
      data-aos-duration="800"
    >
      <h2 class="text-3xl md:text-4xl font-sans font-bold mb-4 relative inline-block">
        Mis Proyectos
        <span class="absolute -bottom-2 left-0 w-full h-1 bg-primary-500/30 rounded"></span>
      </h2>
      <p class="text-lg text-neutral-600 dark:text-neutral-400 mt-6">
        Una selección de los proyectos más destacados en los que he trabajado.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-10 max-w-6xl mx-auto">
      {proyectos.map((proyecto, index) => (
        <div 
          class="bg-white/90 dark:bg-dark-surface/90 backdrop-blur-sm rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-500 border border-neutral-200/80 dark:border-neutral-700/80 group"
          data-aos="fade-up"
          data-aos-duration="800"
          data-aos-delay={index * 100}
        >
          <!-- Cabecera con imagen del proyecto -->
          <div class="relative overflow-hidden aspect-video">
            <!-- Etiqueta de categoría -->
            <span class="absolute top-4 left-4 z-10 bg-white/90 dark:bg-dark-background/90 backdrop-blur-sm text-primary-700 dark:text-primary-300 text-xs font-medium px-3 py-1.5 rounded-full border border-primary-200 dark:border-primary-800 shadow-sm">
              {proyecto.categoria}
            </span>
            
            <img 
              src={proyecto.imagen} 
              alt={`Proyecto: ${proyecto.titulo}`} 
              class="w-full h-full object-cover object-top transition-all duration-700 ease-in-out group-hover:scale-105 group-hover:filter group-hover:brightness-[0.95]"
            />
            
            <!-- Gradiente sobre la imagen -->
            <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-black/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            
            <!-- Enlaces flotantes -->
            <div class="absolute bottom-0 left-0 right-0 p-4 flex justify-end gap-3 translate-y-full opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300 ease-in-out">
              <a 
                href={proyecto.enlaceDemo} 
                target="_blank" 
                rel="noopener noreferrer"
                class="bg-white/90 dark:bg-dark-background/90 backdrop-blur-sm p-2 rounded-full hover:scale-110 transition-transform duration-300 text-primary-600 dark:text-primary-400 shadow-md"
                title="Ver demo"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
              </a>
              <a 
                href={proyecto.enlaceRepo} 
                target="_blank" 
                rel="noopener noreferrer"
                class="bg-white/90 dark:bg-dark-background/90 backdrop-blur-sm p-2 rounded-full hover:scale-110 transition-transform duration-300 text-neutral-700 dark:text-neutral-300 shadow-md"
                title="Ver código"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23a11.509 11.509 0 0 1 3.005-.404c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            </div>
          </div>
          
          <!-- Contenido -->
          <div class="p-6">
            <h3 class="text-xl font-bold text-neutral-900 dark:text-neutral-100 mb-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
              {proyecto.titulo}
            </h3>
            <p class="text-neutral-600 dark:text-neutral-300 text-sm mb-4 line-clamp-3 group-hover:line-clamp-none transition-all duration-300">
              {proyecto.descripcion}
            </p>
            
            <!-- Tecnologías -->
            <div class="flex flex-wrap gap-2 mt-4">
              {proyecto.tecnologias.map(tech => {
                const hasIcon = Object.prototype.hasOwnProperty.call(techIcons, tech);
                const iconName = hasIcon ? techIcons[tech] : tech.toLowerCase();
                
                return (
                  <span class="px-3 py-1.5 text-xs font-medium bg-neutral-100 dark:bg-neutral-800 text-neutral-800 dark:text-neutral-200 rounded-full flex items-center shadow-sm transform transition-transform duration-300 hover:scale-105">
                    {hasIcon && (
                      <img 
                        src={`https://cdn.simpleicons.org/${iconName}`} 
                        alt={`${tech} icon`}
                        class="w-3.5 h-3.5 mr-1.5" 
                      />
                    )}
                    {tech}
                  </span>
                )
              })}
            </div>
            
            <!-- Enlaces versión escritorio -->
            <div class="flex justify-between items-center mt-6 pt-4 border-t border-neutral-200 dark:border-neutral-700/50">
              <span class="text-xs text-neutral-500 dark:text-neutral-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                {new Date().getFullYear()}
              </span>
              
              <div class="flex gap-4">
                <a 
                  href={proyecto.enlaceDemo} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-sm font-medium text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 transition-colors flex items-center gap-1"
                >
                  Demo
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
                <a 
                  href={proyecto.enlaceRepo} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-sm font-medium text-neutral-600 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-neutral-100 transition-colors flex items-center gap-1"
                >
                  Código
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Botón para ver más proyectos -->
    <div 
      class="text-center mt-12"
      data-aos="fade-up"
      data-aos-delay="400"
    >
      <a 
        href="https://github.com/teffidev" 
        target="_blank" 
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 bg-neutral-800 hover:bg-neutral-900 dark:bg-neutral-700 dark:hover:bg-neutral-600 text-white font-medium rounded-lg transition-all duration-300 hover:shadow-lg hover:-translate-y-1 group"
      >
        <span>Ver más en GitHub</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-transform duration-300 group-hover:translate-x-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H3a1 1 0 110-2h9.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
/* Fondo con patrón de puntos */
.bg-grid-pattern {
  background-image: radial-gradient(circle, rgba(128, 128, 128, 0.1) 1px, transparent 1px);
  background-size: 30px 30px;
  background-position: 0 0;
}

/* Transición suave para la expansión del texto */
.line-clamp-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.group:hover .group-hover\:line-clamp-none {
  -webkit-line-clamp: unset;
}

/* Efectos adicionales para hover en tarjetas */
@media (hover: hover) {
  .grid > div:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
}
</style>